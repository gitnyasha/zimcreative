<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-md-9">
      <div class="vcontainer">
        <video controls src="<%= @video.file.url if @video.file? %>"></video>
      </div>
      <p>
        <strong>Title:</strong>
        <%= @video.title %>
      </p>
      <hr>
    </div>
    <div class="col-md-3">
      <div class="card">
        <%= gravatar_for @video.user, class: "card-img-top" %>
        <div class="card p-3">
          <h5 class="card-title"><%= link_to @video.user.name.capitalize, @video.user %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <p class="bg-primary text-white p-3">Subcribers <%= @video.user.subscribers.count %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
